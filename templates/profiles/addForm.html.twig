{% extends 'base.html.twig' %}

{% block title %}Add profile{% endblock %}




{% block body %}

    <a href="/profiles/index">Go back to profiles's list</a>

    <div id="newProfile">

        <h1>Create a new Profile</h1>
        <input type="text" id="profileName" placeholder="Enter profile name">
        <ul id="rolesList" class="list-group">

        </ul>
        <button class="btn btn-primary mt-3" id="addProfileBtn" onclick="addProfile()">Add Profile</button>
    </div>

{% endblock %}

{% block js %}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const rolesList = document.getElementById('rolesList');
        getRolesByGroup(rolesList);
        console.log(rolesList);
    });
</script>
{% endblock %}




