<body {%block onload %}{% endblock %}>
    <div class="container">
        {% if app.user %}<div class="text-right" id="loggedInUser"><p id="currentUsernale" style="margin-right : 1%; display: inline;">Connecté en tant que : {{app.user.username}}</p> <a href="/logout"
                class="btn btn-danger">Déconnecter</a></div> {% endif %}
        {% block body %}{% endblock %}
    </div>
</body>

<script>

    function showNotAllowed(message) {
    Swal.fire({
        icon: "error",
        title: "Accès interdit",
        text: message ?? "Action non autorisée !",
        confirmButtonColor: "#007bff"
    });

    throw new Error();
}
</script>
