{% extends 'base.html.twig' %}

{% block title %}Tier Types{% endblock %}

{% block onload %} onload="getTierTypes()" {% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Tier Types</h1>
    </div>

    <div class="d-flex justify-content-between">
        <a href="/tiers/index" class="btn btn-success">
            <span class="material-symbols-outlined">arrow_back</span> Revenir aux Tiers
        </a>
        <a href="#" onclick="getTierTypes()" class="btn btn-warning">Actualiser</a>
        <a href="{{ path('app_tiers_type_add_form') }}" class="btn btn-primary">
            <span class="material-symbols-outlined">add</span> Ajouter Tier Type
        </a>
    </div><br>

    <table class="table display" id="example">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="tierTypesList">
            <!-- Les tier types seront ajoutés ici dynamiquement -->
        </tbody>
    </table>

    <!-- Modal Bootstrap pour afficher les catégories -->
    <div class="modal fade" id="categoriesModal" tabindex="-1" aria-labelledby="categoriesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="categoriesModalLabel">Catégories du tier type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="categoryList">
                        <!-- Les catégories seront ajoutées ici dynamiquement -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour modifier un tier type -->
    <div class="modal fade" id="editTierTypeModal" tabindex="-1" aria-labelledby="editTierTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editTierTypeModalLabel">Modifier le tier type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="tierTypeId">
                    <div class="mb-3">
                        <label for="editTierTypeName" class="form-label">Nom</label>
                        <input type="text" class="form-control" id="editTierTypeName" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary" onclick="editTierType()">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
